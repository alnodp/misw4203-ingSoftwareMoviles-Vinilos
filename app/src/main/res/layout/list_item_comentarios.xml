<?xml version="1.0" encoding="utf-8"?>


<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable name="comment" type="com.example.proyectomoviles.models.Comment"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/cdDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{comment.description}"
                android:textSize="18sp"
                tools:text="The most relevant album of Ruben Blades" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cdRatingLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rating_label"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="PuntuaciÃ³n: " />


            <TextView
                android:id="@+id/cdRating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{comment.rating}"
                android:textSize="18sp"
                tools:text="5" />

        </LinearLayout>


        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
