<?xml version="1.0" encoding="utf-8"?>


<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable name="comment" type="com.example.proyectomoviles.models.Comment"/>
    </data>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/item_comment_Card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/cdDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{comment.description}"
                android:textSize="14sp"
                tools:text="The most relevant album of Ruben Blades" />

            <TextView
                android:id="@+id/cdRating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{comment.rating}"
                android:textSize="14sp"
                tools:text="5" />
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
</layout>
